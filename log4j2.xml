<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="all">
	<Appenders>
		<Console name="ConsoleAppender" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%highlight{%d{yyy-MM-dd HH:mm:ss SSS} %-5level %-40logger{36} %-20M %-5L %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}" />
		</Console>
		<File name="FileAppender"
			fileName="${log.filename.prefix}-${date:yyyyMMdd}.log"
			immediateFlush="false" append="true">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss SSS} %-5level %logger{36}.%M.%L %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="${log.level}">
			<AppenderRef ref="ConsoleAppender" />
			<AppenderRef ref="FileAppender" />
		</Root>
	</Loggers>
</Configuration>